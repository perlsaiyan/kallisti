#class {mount} {kill}
#class {mount} {open}

#nop -- ---------------------------------------------------------------
#nop -- Configuration variables
#nop -- ---------------------------------------------------------------
#var mount hippo;

#nop -- ---------------------------------------------------------------
#nop -- Actions
#nop -- ---------------------------------------------------------------

#action {You hop on a %1's back.} {
    #switch {"%1"} {
        #case {"war pegasus"} {#var mount pegasus};
        #default {#var mount %1};
    }
    syslog Setting mount to $mount.;
}

#action {^You try to ride a great eagle, but you fall on your butt} {
    stand;
    mount $mount;
}


